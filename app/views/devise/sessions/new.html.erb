<h2>Войти</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "form-control", required: false %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password, class: "form-control", required: false %>
    </div>

    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me, required: false, as: :boolean if devise_mapping.rememberable? %> Запомнить меня
      </label>
    </div>

    <div class="form-group">
      <%= f.submit "Войти", class: "btn btn-primary" %>
    </div>

<% end %>

<%= render "devise/shared/links" %>