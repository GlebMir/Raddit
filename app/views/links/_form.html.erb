<%= form_for @link, html: { multipart: true } do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>
      <%= f.label :image, "Картинка" %> <small><i>(150 × 150)</i></small><br>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <%= f.label :title, "Заголовок" %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :url, "URL" %><br>
      <%= f.text_field :url, class: "form-control" %>
    </div>
    <br>
    <div class="form-group">
      <%= f.submit "Создать", class: "btn btn-lg btn-primary" %>
      <%= link_to 'Отмена', links_path, class: "btn btn-danger btn-lg" %>
    </div>


<% end %>
