<h2>Регистрация</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <%= devise_error_messages! %>


    <div class="form-group">
      <%= f.label :name, "Имя" %>
      <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <span class="glyphicon glyphicon-camera" aria-hidden="true"></span>
      <%= f.label :avatar, "Аватар" %> <small><i>(60 × 60)</i></small><br>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.submit "Зарегистрироваться", class: "btn btn-lg btn-primary" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
