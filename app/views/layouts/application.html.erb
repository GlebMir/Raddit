<!DOCTYPE html>
<html>
<head>
  <title>Raddit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="navbar navbar-default" role="navigation">
  <div class="navbar-inner">
    <div class="container">
      <div id="logo" class="navbar-brand"><%= link_to "Raddit", root_path %></div>
      <nav class="collapse navbar-collapse navbar-ex1-collapse">
        <% if user_signed_in? -%>
            <ul class="nav navbar-nav navbar-right">

              <li type="button">
                <div class="btn-group btn-lg">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <span class="default-menu"><%= link_to 'Создать пост', new_link_path%></span>
                </div>
              </li>

              <li type="button">
                <div class="btn-group btn-lg">
                  <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                  <span class="default-menu"><%= link_to 'Профиль', edit_user_registration_path %></span>
                </div>
              </li>


              <li type="button">
                <div class="btn-group btn-lg">
                  <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                  <span class="default-menu"><%= link_to 'Выйти', destroy_user_session_path, :method => :delete %></span>
                </div>
              </li>

            </ul>

        <% else -%>
            <ul class="nav navbar-nav pull-right">
              <li type="button">
                <div class="btn-group btn-lg">
                  <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                  <span class="default-menu"><%= link_to 'Зарегистрироваться', new_user_registration_path %></span>
                </div>
              </li>

              <li type="button">
                <div class="btn-group btn-lg">
                  <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                  <span class="default-menu"><%= link_to 'Войти', new_user_session_path %></span>
                </div>
              </li>

            </ul>
        <% end -%>
      </nav>
    </div>
  </div>
</header>

<div id="main_content" class="container">
  <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert alert-info") %>
  <% end %>
  <div id="content" class="col-md-9 center-block">
    <%= yield %>
  </div>
</div>
</div>
</body>
</html>